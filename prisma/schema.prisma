// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String?  // optional phone number
  cashback  Float    @default(0)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime?
  orders    Order[]
  prizeClaims PrizeClaim[]
  cashbackTransactions CashbackTransaction[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  description String
  price     Float
  image     String
  stock     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime?
  orders    Order[]
}

model Prize {
  id        String   @id @default(uuid())
  name      String
  description String
  image     String?   // optional
  points    Int
  stock     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime?
  prizeClaims PrizeClaim[]
}

model PrizeClaim {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  prize     Prize    @relation(fields: [prizeId], references: [id])
  prizeId   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model Order {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  amount    Float
  status    String   @default("pending")
  stripeId  String?
  cashbackEarned Float @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model CashbackTransaction {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  amount    Float
  type      String
  description String
  orderId   String?
  createdAt DateTime @default(now())
}

model News {
  id        String   @id @default(uuid())
  title     String
  content   String
  thumbnail String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
