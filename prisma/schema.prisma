// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  cashback  Float    @default(0)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
  prizeClaims PrizeClaim[]
  cashbackTransactions CashbackTransaction[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
}

model News {
  id        String   @id @default(cuid())
  title     String
  content   String
  thumbnail String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Order {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  amount      Float
  status      String   @default("pending") // pending, paid, cancelled, completed
  stripeId    String?
  cashbackEarned Float @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}

model Prize {
  id          String   @id @default(cuid())
  name       String
  description String
  image       String?
  points      Int      // Points required to claim
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  claims      PrizeClaim[]
}

model PrizeClaim {
  id        String   @id @default(cuid())
  userId    String
  prizeId   String
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  prize     Prize    @relation(fields: [prizeId], references: [id])
}

model CashbackTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  type        String   // "earned", "spent", "refund"
  description String
  orderId     String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

